---
import Layout from "@/layouts/Layout.astro";

import "../styles/globals.css";

import SectionContainer from "@/components/SectionContainer.astro";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import Experiencia from "./_components/Experiencia.astro";
import Hero from "./_components/Hero.astro";
---

<Layout title="Daniel Sintimbrean | Fullstack Web" description="">
  <main>
    <SectionContainer> <Hero /> </SectionContainer>

    <div class="space-y-20">
      <SectionContainer>
        <Experiencia />
      </SectionContainer>

