---
import Layout from "@/layouts/Layout.astro";

import "../styles/globals.css";

import SectionContainer from "@/components/SectionContainer.astro";
import Experiencia from "./_components/Experiencia.astro";
import Hero from "./_components/Hero.astro";
import MyProjects from "./_components/MyProjects.astro";
import { Briefcase } from "lucide-react";
---

<Layout title="Daniel Sintimbrean | Fullstack Web" description="">
  <main>
    <SectionContainer> <Hero /> </SectionContainer>

    <div class="space-y-20">
      <SectionContainer>
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase className="size-8" />
        Experiencia laboral
      </h2>
        <Experiencia />
      </SectionContainer>

      <SectionContainer>
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-foreground"
      >
        <Briefcase className="size-8" />
        Mis proyectos 
      </h2>
        <MyProjects />
      </SectionContainer>
      <SectionContainer>
        <div
          class="container grid items-center gap-6 px-4 text-center md:px-6 lg:gap-10"
        >
          <div class="space-y-3">
            <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
              My Skills
            </h2>
            <p
              class="mx-auto max-w-[600px] text-gray-500 dark:text-gray-400 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
            >
              I'm skilled in a variety of areas, including user experience
              design, frontend development, and more.
            </p>
          </div>
          <div
            class="mx-auto grid max-w-5xl items-start gap-6 lg:grid-cols-2 lg:gap-12"
          >
            <div class="grid gap-1">
              <h3 class="text-lg font-bold">User Experience Design</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                I create intuitive and user-friendly interfaces that make it
                easy for users to accomplish their goals.
              </p>
            </div>
            <div class="grid gap-1">
              <h3 class="text-lg font-bold">Frontend Development</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                I build beautiful and responsive websites using HTML, CSS, and
                JavaScript.
              </p>
            </div>
            <div class="grid gap-1">
              <h3 class="text-lg font-bold">User Experience Design</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                I create intuitive and user-friendly interfaces that make it
                easy for users to accomplish their goals.
              </p>
            </div>
            <div class="grid gap-1">
              <h3 class="text-lg font-bold">Frontend Development</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                I build beautiful and responsive websites using HTML, CSS, and
                JavaScript.
              </p>
            </div>
          </div>
        </div>
      </SectionContainer>
    </div>
  </main>
</Layout>
