---
import Layout from "../layouts/Layout.astro";

import "@/styles/globals.css";

import { Porfolio } from "@/components/porfolio";
import SectionContainer from "@/components/SectionContainer.astro";
---

<Layout title="Welcome to Astro." description="">
  <main>
    <Porfolio />
    <SectionContainer>
      <div
        class="container grid items-center gap-6 px-4 text-center md:px-6 lg:grid-cols-2 lg:justify-center lg:gap-10"
      >
        <div class="space-y-2 lg:order-last">
          <div class="inline-block rounded-lg bg-background px-3 py-1 text-sm">
            Introduction
          </div>
          <h1
            class="md:text-5xl/lg:leading-tighter text-3xl font-bold tracking-tighter"
          >
            Hi, I'm John Doe
          </h1>
          <p
            class="mx-auto max-w-[600px] text-gray-500 dark:text-gray-400 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            I'm a passionate UX/UI Designer and Full Stack Developer with a love
            for creating beautiful and intuitive user experiences. Welcome to my
            portfolio!
          </p>
        </div>
        <img
          alt="Hero"
          class="mx-auto aspect-video overflow-hidden rounded-xl object-cover object-center lg:aspect-video"
          height="310"
          src="/placeholder.svg"
          width="550"
        />
      </div>
    </SectionContainer>
  </main>
</Layout>
